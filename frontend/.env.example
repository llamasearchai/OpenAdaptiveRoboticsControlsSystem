# Environment Variables
# Copy this file to .env.local and fill in the values

# =============================================================================
# API Configuration
# =============================================================================

# Backend API base URL
NEXT_PUBLIC_API_URL=http://localhost:8000/api

# WebSocket URL for real-time updates
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws

# API request timeout in milliseconds
NEXT_PUBLIC_API_TIMEOUT=30000

# =============================================================================
# Authentication
# =============================================================================

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-secret-here

# NextAuth URL
NEXTAUTH_URL=http://localhost:3000

# OAuth providers (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# AI Configuration (GPT-5.2 default)
# =============================================================================

# OpenAI API Key
OPENAI_API_KEY=your-openai-api-key-here

# Default model (GPT-5.2)
OPENAI_DEFAULT_MODEL=gpt-5.2

# Fallback models chain
OPENAI_FALLBACK_MODELS=gpt-4.1,gpt-4.1-mini,gpt-4o-mini

# API timeout for AI requests (ms)
OPENAI_TIMEOUT_MS=30000

# Max retries for AI requests
OPENAI_MAX_RETRIES=3

# =============================================================================
# Feature Flags
# =============================================================================

# Enable 3D viewer
NEXT_PUBLIC_ENABLE_3D_VIEWER=true

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL=false

# Enable analytics
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =============================================================================
# Analytics & Monitoring
# =============================================================================

# Vercel Analytics (if using Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Sentry DSN for error tracking
NEXT_PUBLIC_SENTRY_DSN=

# =============================================================================
# Storage
# =============================================================================

# AWS S3 for file uploads (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# =============================================================================
# Development
# =============================================================================

# Node environment
NODE_ENV=development

# Debug mode
DEBUG=false

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable MSW for API mocking in development
NEXT_PUBLIC_ENABLE_MSW=true
